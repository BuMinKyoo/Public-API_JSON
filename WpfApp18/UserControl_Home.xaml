<UserControl x:Class="WpfApp18.UserControl_Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp18"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid Background="#F1E6F7">
        <TextBlock FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 80 0 0">
                    <Run Foreground="Green" Text="채용"/><Run Foreground="Black" Text="정"/><Run Foreground="Coral" Text="보"/>
        </TextBlock>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 150 0 0">
            <Button Width="100" Height="50" Content="Recruit" Margin="10"
                    Command="{Binding MoveRecruit}"/>
            <Button Width="100" Height="50" Content="MyInfo" Margin="10" Command="{Binding MoveMyInfo}"/>
        </StackPanel>
    </Grid>
</UserControl>
