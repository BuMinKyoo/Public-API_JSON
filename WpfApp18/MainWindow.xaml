<Window x:Class="WpfApp18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp18"
        Title="MainWindow" Height="500" Width="900" ResizeMode="NoResize">
    <TabControl TabStripPlacement="Left" SelectedIndex="{Binding TabControl_SelectedIndex}">
        <TabItem Header="Home">
            <local:UserControl_Home/>
        </TabItem>

        <TabItem Header="Recruit">
            <local:UserControl_Recruit/>
        </TabItem>

        <TabItem Header="MyInfo">
            <local:UserControl_MyInfo/>
        </TabItem>
    </TabControl>
</Window>
